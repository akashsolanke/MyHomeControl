<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	tools:context="tk.giesecke.myhomecontrol.security.SecCamViewer">

	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>

	</android.support.design.widget.AppBarLayout>

	<LinearLayout
		android:id="@+id/content_sec_cam_viewer"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:context="tk.giesecke.myhomecontrol.security.SecCamViewer"
		tools:showIn="@layout/activity_sec_video"
		android:orientation="vertical">

		<WebView
			android:id="@+id/wv_seccam1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="visible"
			android:layout_weight="1"/>

		<WebView
			android:id="@+id/wv_seccam2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="visible"
			android:layout_weight="1"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0">

			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/ic_refresh"
				android:id="@+id/ib_refresh"
				android:contentDescription="@string/ALT_LOCAL_SSID"/>

			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/ic_single_view"
				android:id="@+id/ib_change_view"
				android:contentDescription="@string/ALT_LOCAL_SSID"/>

			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@android:drawable/ic_media_ff"
				android:id="@+id/ib_switch_video"
				android:contentDescription="@string/ALT_LOCAL_SSID"/>

			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				app:srcCompat="@android:drawable/ic_notification_clear_all"
				android:id="@+id/ib_close_view"
				android:contentDescription="@string/ALT_LOCAL_SSID"/>

		</LinearLayout>

	</LinearLayout>

</android.support.design.widget.CoordinatorLayout>
