	<item
		android:id="@+id/action_devDebug"
		android:icon="@drawable/ic_debug"
		android:orderInCategory="100"
		android:title="@string/action_devDebug"
		app:showAsAction="never"/>

	<!-- Menu ID 11 => sync solar database manually -->
	<item
		android:id="@+id/action_syncSolar"
	    android:icon="@drawable/thumb"
	    android:orderInCategory="100"
	    android:title="@string/action_syncSolar"
	    app:showAsAction="never"/>

