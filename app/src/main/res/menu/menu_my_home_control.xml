<menu xmlns:android="http://schemas.android.com/apk/res/android"
	  xmlns:app="http://schemas.android.com/apk/res-auto"
	  xmlns:tools="http://schemas.android.com/tools"
	  tools:context="tk.giesecke.myhomecontrol.MyHomeControl"
	  tools:ignore="AlwaysShowAction">

	<!-- Menu ID 0 => lights -->
	<item
		android:id="@+id/action_lightControl"
		android:icon="@drawable/ic_lights"
		android:orderInCategory="100"
		android:title="@string/lights_bedroom"
		app:showAsAction="always"/>

	<!-- Menu ID 1 => security -->
	<item
		android:id="@+id/action_security"
		android:orderInCategory="100"
		android:title="@string/action_security"
		android:icon="@drawable/ic_security"
		app:showAsAction="always"/>

	<!-- Menu ID 2 => solar -->
	<item
		android:id="@+id/action_solar"
		android:orderInCategory="100"
		android:title="@string/action_solar"
		android:icon="@drawable/ic_solar"
		app:showAsAction="always"/>

